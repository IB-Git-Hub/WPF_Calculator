<Window x:Class="Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator"
        mc:Ignorable="d"
        Title="IB Calculator" Height="450" Width="280">
    <Grid>
        <StackPanel>
            <Menu FontSize="16" Padding="10" Margin="5" >
                <MenuItem Header="_File" Padding="10">
                <MenuItem Header="standard"/>
                </MenuItem>
            </Menu>
            <TextBlock Name="text_result"
                        Text="result"
                       FontSize="32"
                     HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>
            <Button Content="C" Click="OnScreenKeyDown" />
            
            <StackPanel Orientation="Horizontal">
                <Button 
                        FontSize="24"
                        Margin="2" Click="OnScreenKeyDown">
                    7
                </Button>
                <Button x:Name="eight"
                        FontSize="24"
                        Margin="2" Click="OnScreenKeyDown">
                    8
                </Button>
                <Button x:Name="nine"
                        FontSize="24"
                        Margin="2" Click="OnScreenKeyDown">
                    9
                </Button>
                <Button x:Name="devide"
                         FontSize="24"
                           Margin="2" Click="OnScreenKeyDown">
                    /
                </Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="four"
                        FontSize="24"
                Margin="2" Click="OnScreenKeyDown">
                    4
                </Button>
                <Button x:Name="five"
                        FontSize="24"
                Margin="2" Click="OnScreenKeyDown">
                    5
                </Button>
                <Button x:Name="six"
                        FontSize="24"
                        Margin="2" Click="OnScreenKeyDown">
                    6
                </Button>
                <Button x:Name="multiply"
                        FontSize="24"
                        Margin="2" Click="OnScreenKeyDown">
                    X
                </Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="one"
                        FontSize="24"
                        Margin="2" Click="OnScreenKeyDown">
                    1
                </Button>
                <Button x:Name="tow"
                        FontSize="24"
                        Margin="2" Click="OnScreenKeyDown">
                    2
                </Button>
                <Button x:Name="three"
                         FontSize="24"
                        Margin="2" Click="OnScreenKeyDown">
                    3
                </Button>
                <Button x:Name="minus"
                        FontSize="24"
                         Margin="2" Click="OnScreenKeyDown">
                    -
                </Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="del"
                        FontSize="24"
                    Margin="2" Click="OnScreenKeyDown">
                    &lt;-
                </Button>
                <Button x:Name="zero"
                        FontSize="24"
                        Margin="2" Click="OnScreenKeyDown">
                    0
                </Button>
                <Button x:Name="dot"
                        FontSize="24"
                        Margin="2" Click="OnScreenKeyDown">
                    .
                </Button>
                <Button x:Name="plus"
                        FontSize="24"
                        Margin="2" Click="OnScreenKeyDown">
                    +
                </Button>
            </StackPanel>
            <Button x:Name="equal"
                    FontSize="24"
                     Margin="2" Click="OnScreenKeyDown" >
                =
            </Button>
            <TextBlock
                Name="test_text"
                FontSize="30"/>
        </StackPanel>
        
    </Grid>
</Window>
