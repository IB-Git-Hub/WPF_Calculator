<Window
    x:Class="Calculator.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Calculator"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mvvm="clr-namespace:Calculator.MVVM"
    Title="IB Calculator"
    Width="280"
    Height="300"
    d:DataContext="{d:DesignInstance Type=mvvm:MainViewModel}"
    ResizeMode="NoResize"
    mc:Ignorable="d">
    <Grid Name="MainGrid" Focusable="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            Name="text_result"
            Grid.Row="1"
            Margin="5"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            FontSize="32"
            Text="{Binding Showpanel}" />

        <Button
            Grid.Row="2"
            Margin="2"
            Click="OnScreenKeyDown"
            Content="C"
            FontSize="24" />

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Button
                Grid.Row="0"
                Grid.Column="0"
                Margin="2"
                Click="OnScreenKeyDown"
                FontSize="24">
                7
            </Button>
            <Button
                Grid.Row="0"
                Grid.Column="1"
                Margin="2"
                Click="OnScreenKeyDown"
                FontSize="24">
                8
            </Button>
            <Button
                Grid.Row="0"
                Grid.Column="2"
                Margin="2"
                Click="OnScreenKeyDown"
                FontSize="24">
                9
            </Button>
            <Button
                Grid.Row="0"
                Grid.Column="3"
                Margin="2"
                Click="OnScreenKeyDown"
                FontSize="24">
                /
            </Button>

        </Grid>

        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Button
                Grid.Row="0"
                Grid.Column="0"
                Margin="2"
                Click="OnScreenKeyDown"
                FontSize="24">
                4
            </Button>
            <Button
                Grid.Row="0"
                Grid.Column="1"
                Margin="2"
                Click="OnScreenKeyDown"
                FontSize="24">
                5
            </Button>
            <Button
                Grid.Row="0"
                Grid.Column="2"
                Margin="2"
                Click="OnScreenKeyDown"
                FontSize="24">
                6
            </Button>
            <Button
                Grid.Row="0"
                Grid.Column="3"
                Margin="2"
                Click="OnScreenKeyDown"
                FontSize="24">
                X
            </Button>

        </Grid>
        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Button
                Grid.Row="0"
                Grid.Column="0"
                Margin="2"
                Click="OnScreenKeyDown"
                FontSize="24">
                1
            </Button>
            <Button
                Grid.Row="0"
                Grid.Column="1"
                Margin="2"
                Click="OnScreenKeyDown"
                FontSize="24">
                2
            </Button>
            <Button
                Grid.Row="0"
                Grid.Column="2"
                Margin="2"
                Click="OnScreenKeyDown"
                FontSize="24">
                3
            </Button>
            <Button
                Grid.Row="0"
                Grid.Column="3"
                Margin="2"
                Click="OnScreenKeyDown"
                FontSize="24">
                -
            </Button>

        </Grid>


        <Grid Grid.Row="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button
                Grid.Row="0"
                Grid.Column="0"
                Margin="2"
                Click="OnScreenKeyDown"
                FontSize="24">
                &lt;-
            </Button>
            <Button
                Grid.Row="0"
                Grid.Column="1"
                Margin="2"
                Click="OnScreenKeyDown"
                FontSize="24">
                0
            </Button>
            <Button
                Grid.Row="0"
                Grid.Column="2"
                Margin="2"
                Click="OnScreenKeyDown"
                FontSize="24">
                .
            </Button>
            <Button
                Grid.Row="0"
                Grid.Column="3"
                Margin="2"
                Click="OnScreenKeyDown"
                FontSize="24">
                +
            </Button>

            <Grid />

        </Grid>

        <Button
            Grid.Row="7"
            Margin="2"
            Click="OnScreenKeyDown"
            FontSize="24">
            =
        </Button>

    </Grid>
</Window>
